<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
    xmlns:Ginger="clr-namespace:Ginger"
    xmlns:UCTreeView="clr-namespace:GingerWPF.UserControlsLib.UCTreeView"
    x:Class="Ginger.WindowExplorer.WindowExplorerPage"
    mc:Ignorable="d" 
	Title="Ginger Window Explorer">

    <DockPanel x:Name="xMaiDock" SizeChanged="xMainDock_SizeChanged">
        <Grid x:Name="xViewAndControlsSection" Background="{StaticResource $BackgroundColor_LightGray}" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" >
            <Grid.RowDefinitions>
                <RowDefinition x:Name="WindowComboboxRow" Height="30" />
                <RowDefinition Height="32"/>
                <RowDefinition x:Name="ControlsViewRow" Height="150*" MinHeight="150"/>
            </Grid.RowDefinitions>

            <!--Window Selection Area-->
            <usercontrols:UCExplorerWindowSelection Grid.Row="0" x:Name="xWindowSelection" />

            <!--<StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Background="{StaticResource $BackgroundColor_White}" Margin="5" Grid.RowSpan="1">
                <TextBlock Text="Browser Page" VerticalAlignment="Top" HorizontalAlignment="Right" FontFamily="Times New Roman" 
                           Foreground="{StaticResource $BackgroundColor_DarkBlue}" FontWeight="Bold"/>-->
            <!--</StackPanel>-->

            <TabControl x:Name="xViewsTabs" Margin="0,5,0,0" Grid.Row="1" Grid.RowSpan="2" Background="{StaticResource $BackgroundColor_LightGray}" SelectionChanged="ViewsTabs_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Background" Value="{StaticResource $BackgroundColor_LightGray}"/>
                        <Setter Property="Height" Value="25"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="False" >
                                <Setter Property="Background" Value="{StaticResource $BackgroundColor_LightGray}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True" >
                                <Setter Property="Background" Value="{StaticResource $BackgroundColor_LightGray}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="ScreenShotViewTab" GotFocus="ScreenShotViewTab_GotFocus">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" >
                            <usercontrols:ImageMakerControl ImageType="Image"  SetAsFontImageWithSize="20"  Width="20" Height="20" />
                            <TextBlock VerticalAlignment="Center" Text="Screenshot"  Margin="5,0,0,0" Foreground="{StaticResource $Color_DarkBlue}" FontWeight="Bold" />
                        </StackPanel>
                    </TabItem.Header>

                    <Frame x:Name="xScreenShotFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    <!--<ScrollViewer x:Name="xMainScrollViewer" Grid.Row="2" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <Canvas x:Name="xSSCanvas" SizeChanged="xSSCanvas_SizeChanged" Height="Auto" Width="Auto">
                            <Image x:Name="xDeviceImage" Height="Auto"  Width="Auto"  
                                   MinHeight="150" MinWidth="150"
                               MouseLeftButtonDown="DeviceImage_MouseLeftButtonDown" 
                               MouseMove="DeviceImage_MouseMove" 
                               MouseLeftButtonUp="DeviceImage_MouseLeftButtonUp" 
                               MouseEnter="DeviceImage_MouseEnter" 
                               MouseLeave="DeviceImage_MouseLeave"  
                               Source="{StaticResource @NotAvailable_600x600}" SizeChanged="DeviceImage_SizeChanged">
                            </Image>
                        </Canvas>
                    </ScrollViewer>-->
                </TabItem>

                <TabItem x:Name="xGridViewTab" GotFocus="xGridViewTab_GotFocus">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" >
                            <usercontrols:ImageMakerControl ImageType="TreeView"  SetAsFontImageWithSize="18"  Width="18" Height="18" />
                            <TextBlock x:Name="xTreeViewTabTextBlock" VerticalAlignment="Center" Text="Tree View"  Margin="5,0,0,0" Foreground="{StaticResource $Color_DarkBlue}" FontWeight="Bold" />
                        </StackPanel>
                    </TabItem.Header>
                    <UCTreeView:TreeView1 x:Name="WindowControlsTreeView"  Grid.Row="2" TreeTitle="Window Visible Controls" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </TabItem>

                <TabItem x:Name="xTreeViewTab" GotFocus="xTreeViewTab_GotFocus">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1">
                            <usercontrols:ImageMakerControl ImageType="DataTable"  SetAsFontImageWithSize="18"  Width="18" Height="18" />
                            <TextBlock x:Name="xGridViewTabTextBlock" VerticalAlignment="Center" Text="Grid View"  Margin="5,0,0,0" Foreground="{StaticResource $Color_DarkBlue}" FontWeight="Bold" />
                        </StackPanel>
                    </TabItem.Header>
                    <Ginger:ucGrid x:Name="xWindowControlsGridView" Grid.Row="2" Title="Window Visible Controls" RowChangedEvent="ControlsGrid_RowChangedEvent" ShowTitle="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </TabItem>

                <TabItem HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="0">
                    <TabItem.Header>
                        <usercontrols:ucButton x:Name="xRefreshCurrentTabContent" Grid.Row="1" ButtonImageType="Reset" ButtonImageHeight="16" HorizontalAlignment="Right"
                                   ButtonImageWidth="16" VerticalAlignment="Top" ButtonType="ImageButton" Click="xRefreshCurrentTabContentBtn_Click" Margin="-3" />
                    </TabItem.Header>
                </TabItem>
            </TabControl>
        </Grid>

        <GridSplitter x:Name="xRowSplitter" DockPanel.Dock="Top" ResizeDirection="Rows" Height="5" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="{StaticResource $Color_DarkBlue}"/>
        <GridSplitter x:Name="xColumnSplitter" DockPanel.Dock="Left" ResizeDirection="Columns" Height="Auto" Width="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="{StaticResource $Color_DarkBlue}" Visibility="Collapsed"/>

        <Ginger:UCElementDetails x:Name="xUCElementDetails" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

    </DockPanel>
    <!--</StackPanel>-->
</Page>