        <TabControl x:Name="xViewsTabs" Margin="0,5,0,0" Grid.Row="1" Grid.RowSpan="2" Background="{StaticResource $BackgroundColor_LightGray}" SelectionChanged="ViewsTabs_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Background" Value="{StaticResource $BackgroundColor_LightGray}"/>
                    <Setter Property="Height" Value="25"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="False" >
                            <Setter Property="Background" Value="{StaticResource $BackgroundColor_LightGray}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True" >
                            <Setter Property="Background" Value="{StaticResource $BackgroundColor_LightGray}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <TabItem x:Name="ScreenShotViewTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <usercontrols:ImageMakerControl ImageType="Image"  SetAsFontImageWithSize="20"  Width="20" Height="20" />
                        <TextBlock VerticalAlignment="Center" Text="Screenshot"  Margin="5,0,0,0" Foreground="{StaticResource $Color_DarkBlue}" FontWeight="Bold" />
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Canvas x:Name="xSSCanvas" SizeChanged="xSSCanvas_SizeChanged" Grid.Row="0">
                        <Image x:Name="xDeviceImage" Height="{Binding ActualHeight, ElementName=DeviceImageCanvas}" Width="{Binding ActualWidth, ElementName=DeviceImageCanvas}"  
                               MouseLeftButtonDown="DeviceImage_MouseLeftButtonDown" 
                               MouseMove="DeviceImage_MouseMove" 
                               MouseLeftButtonUp="DeviceImage_MouseLeftButtonUp" 
                               MouseEnter="DeviceImage_MouseEnter" 
                               MouseLeave="DeviceImage_MouseLeave"  
                               Source="{StaticResource  @NotAvailable_600x600}" SizeChanged="DeviceImage_SizeChanged">
                        </Image>
                    </Canvas>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Stretch" Height="16" Background="{StaticResource $BackgroundColor_White}">
                        <TextBlock Text="Browser Page" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Times New Roman" Foreground="{StaticResource $BackgroundColor_DarkBlue}" FontWeight="Bold"/>
                        <usercontrols:ucButton x:Name="xTakeScreenshotBtn" ButtonImageType="Reset" ButtonImageHeight="16" HorizontalAlignment="Center"
                                  ButtonImageWidth="16" VerticalAlignment="Center" ButtonType="ImageButton" Click="xTakeScreenshotBtn_Click" />
                    </StackPanel>

                </Grid>
            </TabItem>

            <TabItem x:Name="xGridViewTab" GotFocus="GridViewTab_GotFocus">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <usercontrols:ImageMakerControl ImageType="TreeView"  SetAsFontImageWithSize="18"  Width="18" Height="18" />
                        <TextBlock x:Name="xTreeViewTabTextBlock" VerticalAlignment="Center" Text="Tree View"  Margin="5,0,0,0" Foreground="{StaticResource $Color_DarkBlue}" FontWeight="Bold" />
                    </StackPanel>
                </TabItem.Header>
                <UCTreeView:TreeView1 x:Name="WindowControlsTreeView" TreeTitle="Window Visible Controls" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>

            <TabItem x:Name="xTreeViewTab" GotFocus="TreeViewTab_GotFocus">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <usercontrols:ImageMakerControl ImageType="DataTable"  SetAsFontImageWithSize="18"  Width="18" Height="18" />
                        <TextBlock x:Name="xGridViewTabTextBlock" VerticalAlignment="Center" Text="Grid View"  Margin="5,0,0,0" Foreground="{StaticResource $Color_DarkBlue}" FontWeight="Bold" />
                    </StackPanel>
                </TabItem.Header>
                <Ginger:ucGrid x:Name="WindowControlsGridView" Title="Window Visible Controls" RowChangedEvent="ControlsGrid_RowChangedEvent" ShowTitle="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
        </TabControl>


