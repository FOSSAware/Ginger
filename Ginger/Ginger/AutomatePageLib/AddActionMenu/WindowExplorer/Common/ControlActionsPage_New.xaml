<Page x:Class="Ginger.WindowExplorer.ControlActionsPage_New"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UserControls="clr-namespace:Amdocs.Ginger.UserControls" xmlns:uclistview="clr-namespace:Ginger.UserControlsLib.UCListView"
      mc:Ignorable="d" Background="White"
      Title="ControlActionsPage_New">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" x:Name="DataFrameRow" />
            <RowDefinition Height="50*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="0" x:Name="xErrorRow" />
            <RowDefinition Height="0" x:Name="xExecInfoRow" />
        </Grid.RowDefinitions>

        <Expander x:Name="xDataFrameExpander" Grid.Row="0" Visibility="Collapsed">
            <ScrollViewer>
                <Frame x:Name="DataFrame" />
            </ScrollViewer>
        </Expander>
        <GridSplitter x:Name="DataFrameSplitter" ResizeDirection="Rows" Grid.Row="0" Height="5"  Grid.ColumnSpan="2" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Background="{StaticResource $Color_DarkBlue}" Visibility="Collapsed" />

        <!--<Ginger:ucGrid x:Name="AvailableControlActionsGrid" ShowAdd="Collapsed" ShowClearAll="Collapsed" ShowDelete="Collapsed" ShowEdit="Collapsed" ShowRefresh="Collapsed" ShowUpDown="Collapsed" Grid.Column="0" RowChangedEvent="AvailableControlActionsGrid_RowChangedEvent" Margin="0,0,5,0" IsSupportDragDrop="False" />-->
        <ScrollViewer x:Name="xOperationsScrollView" Grid.Row="1" Visibility="Collapsed">
            <Grid x:Name="xOperationsGrid" Visibility="Collapsed" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>

                <Label Content="Locate By" Grid.Row="0" Grid.Column="0" />
                <ComboBox x:Name="xDDLocateBy" Grid.Row="0" Grid.Column="1" Style="{StaticResource $FlatInputComboBoxInGridCellStyle}" Width="100" Height="30" SelectionChanged="xDDLocateBy_SelectionChanged" />

                <Label Content="Locate Value" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="xLocateValueTxtBox" Grid.Row="1" Grid.Column="1" Width="250" Style="{StaticResource @MultiRowsTextBoxStyle}" Height="25" IsEnabled="False"></TextBox>

                <Label Content="Action" Grid.Row="2" Grid.Column="0" />
                <ComboBox x:Name="xDDActions" Grid.Row="2" Grid.Column="1" Style="{StaticResource $FlatInputComboBoxInGridCellStyle}" Width="250" Height="30" SelectionChanged="xDDActions_SelectionChanged" />

                <Label Content="Value" Grid.Row="3" Grid.Column="0" />
                <TextBox x:Name="xValueTextBox" Grid.Row="3" Grid.Column="1" Width="250" Style="{StaticResource @MultiRowsTextBoxStyle}" Height="25"></TextBox>
            </Grid>

        </ScrollViewer>
        <Frame x:Name="xActEditPageFrame" Grid.Row="1" Visibility="Collapsed" />

        <!--<GridSplitter ResizeDirection="Columns" Grid.Column="0" Width="1" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Stretch" Background="{StaticResource $Color_DarkBlue}" IsEnabled="True" Margin="0,1,0,0"/>-->
        <!--<Ginger:ucGrid x:Name="AvailableLocatorsGrid" Title="Locators:" Grid.Row="1" ShowAdd="Collapsed" ShowClearAll="Collapsed" ShowDelete="Collapsed" ShowEdit="Collapsed" ShowRefresh="Collapsed" ShowUpDown="Collapsed" Grid.Column="1" IsSupportDragDrop="False" />-->

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" >
            <UserControls:ucButton x:Name="xRunActBtn" ButtonImageType="Run" ButtonText="Run Action" ButtonImageHeight="16" HorizontalAlignment="Center"
                                   ButtonImageWidth="16" VerticalAlignment="Center" ButtonType="RoundTextAndImageButton" Margin="25,0,0,0" Click="xRunActBtn_Click" />

            <uclistview:UcItemExecutionStatus x:Name="xExecutionStatusIcon" StatusViewMode="Image" StatusSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>

            <UserControls:ucButton x:Name="xAddActBtn" ButtonImageType="Upload" ButtonText="Add Action" ButtonImageHeight="16" HorizontalAlignment="Center"
                                   ButtonImageWidth="16" VerticalAlignment="Center" ButtonType="RoundTextAndImageButton" Margin="100,9,0,10" Click="xAddActBtn_Click" Height="41" />
        </StackPanel>

        <Label x:Name="xErrorLbl" Grid.Row="3" Foreground="Red" FontWeight="Bold" Padding="0" Content="Error : " HorizontalAlignment="Left"/>
        <Label x:Name="xExecInfoLbl" Grid.Row="4" Foreground="Green" FontWeight="Bold" Padding="0" Content="Execution Info : " HorizontalAlignment="Left"/>
    </Grid>
</Page>
