                </StackPanel>

                <Label Content="Locate Value" Grid.Row="1" Grid.Column="0" Style="{StaticResource $LabelStyle}"/>
                <TextBox x:Name="xLocateValueTxtBox" Grid.Row="1" Grid.Column="2" Width="250" Style="{StaticResource @MultiRowsTextBoxStyle}" Height="Auto" IsEnabled="False" Margin="2"></TextBox>

                <Label Content="Action" Grid.Row="2" Grid.Column="0" Style="{StaticResource $LabelStyle}"/>
                <ComboBox x:Name="xDDActions" Grid.Row="2" Grid.Column="2" Style="{StaticResource $FlatInputComboBoxInGridCellStyle}" Width="250" Height="30" SelectionChanged="xDDActions_SelectionChanged" />

                <Label Content="Value" Grid.Row="3" Grid.Column="0" Style="{StaticResource $LabelStyle}"/>
                <TextBox x:Name="xValueTextBox" Grid.Row="3" Grid.Column="2" Width="250" Style="{StaticResource @MultiRowsTextBoxStyle}" Height="30"></TextBox>

                <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center">
