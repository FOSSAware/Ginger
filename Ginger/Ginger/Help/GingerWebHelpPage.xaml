<Page x:Class="Ginger.Help.GingerWebHelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
      xmlns:local="clr-namespace:Ginger.Help"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GingerWebHelpPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource $BackgroundColor_LightGray}">
            <Button x:Name="xBackButton" Click="xBackButton_Click" ToolTip="Back" Style="{StaticResource @InputImageButtonStyle_NoBorder}" >
                <Image Source="{StaticResource @LeftArrow_32x32.png}" Height="24" Width="24"/>
            </Button>
            <Button x:Name="xRefreshButton" Click="xRefreshButton_Click" usercontrols:ImageMaker.Content="Refresh" Width="22"  ToolTip="Refresh" Style="{StaticResource @InputImageButtonStyle_NoBorder}" >
            </Button>
            <Button x:Name="xOpenExternallyBtn" Click="xOpenExternallyBtn_Click" ToolTip="Open in External Browser" Style="{StaticResource @InputImageButtonStyle_NoBorder}" HorizontalAlignment="Right" Margin="0,0,3,0">
                <Image Source="{StaticResource @CreateShorCut_32x32.png}" Height="22" Width="22"/>
            </Button>
        </DockPanel>
        <Frame x:Name="HelpBrowserFrm" Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White" />
    </Grid>
</Page>
