<Page xmlns:Actions="clr-namespace:Ginger.Actions"  x:Class="Ginger.Actions.ActOcrEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:GingerCore="clr-namespace:GingerCore;assembly=GingerCore" xmlns:UserControlsLib="clr-namespace:Ginger.UserControlsLib"
      xmlns:local="clr-namespace:Ginger.Actions"
      xmlns:Ginger="clr-namespace:Ginger" xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="556.717" d:DesignWidth="728.358"
	Title="ActOcrEditPage" >

    <Grid VerticalAlignment="Top" Background="{StaticResource $BackgroundColor_LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition MaxHeight="60"/>
            <RowDefinition MaxHeight="60"/>
            <RowDefinition MaxHeight="60"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10,10,10">
            <Label Style="{StaticResource @LabelStyle}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Read Text From : "/>
            <ComboBox SelectionChanged="xOcrFileTypeCombo_SelectionChanged" x:Name="xOcrFileTypeCombo" MinWidth="250" MaxWidth="400"
                           Style="{StaticResource $FlatInputComboBoxStyle}" >
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,10,10">
            <Label Style="{StaticResource @LabelStyle}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Operation : "/>
            <ComboBox SelectionChanged="xOcrOperationCombo_SelectionChanged" x:Name="xOcrOperationCombo" MinWidth="250" MaxWidth="400"
                           Style="{StaticResource $FlatInputComboBoxStyle}" >
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,10,10">
            <Label Style="{StaticResource @LabelStyle}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Content="File Path : "/>
            <Actions:UCValueExpression x:Name="xFilePathTextBox" ToolTip="File Path for OCR Operation" MinWidth="200" MaxWidth="450"/>
            <Button x:Name="xBrowseFilePath" Click="xBrowseFilePath_Click" Content="Browse" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource @InputButtonStyle}" Margin="2,0,0,0"/>
            <Label Style="{StaticResource @LabelStyle}" x:Name="lblPageNos" FontWeight="SemiBold" VerticalAlignment="Center" Visibility="Collapsed" HorizontalAlignment="Left" Content="Page Number (Optional):" Margin="5,0,0,0"/>
            <Actions:UCValueExpression x:Name="xPageNosTextBox" ToolTip="Page Number" MinWidth="70" MaxWidth="450" Visibility="Collapsed" Margin="0,0,0,0"/>
            <usercontrols:ImageMakerControl x:Name="xInfoPageNum" ToolTip="Enter page number as: single, range (- separated) or specific pages (, separated)" SetAsFontImageWithSize="10" ImageType="Info" Width="10" Height="10" FontWeight="Bold" Foreground="{StaticResource $BackgroundColor_DarkGray}" Margin="2,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,10,10">
            <Label Style="{StaticResource @LabelStyle}" x:Name="xLabelFirststring" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Label : "/>
            <Actions:UCValueExpression x:Name="xFirstString" ToolTip="Find content after this label" MinWidth="100" MaxWidth="450"/>
            <Label Style="{StaticResource @LabelStyle}" x:Name="xLabelSecondtring" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Label : "/>
            <Actions:UCValueExpression x:Name="xSecondString" ToolTip="Find content upto this label" MinWidth="100" MaxWidth="450"/>

        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Expander x:Name="xAdvancedSettingsExpander" ExpandDirection="Down"  IsExpanded="False"  Style="{StaticResource $ExpanderStyle}" DockPanel.Dock="Top" Margin="0,0,0,10" BorderThickness="0">
                <Expander.Header>
                    <Label Content="Advanced Settings" Style="{StaticResource @LabelStyle}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                </Expander.Header>
                <Expander.Content>
                    <Grid>
                        <StackPanel Orientation="Vertical" Margin="0,10,10,10">
                            <StackPanel Orientation="Horizontal">
                                <Label Style="{StaticResource @LabelStyle}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Left" Content="PDF Password (if any): " />
                                <Actions:UCValueExpression x:Name="xSetPdfPasswordTextBox" ToolTip="PDF Password (if any)" MinWidth="100" MaxWidth="300" Margin="5,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Expander.Content>
            </Expander>
        </StackPanel>
    </Grid>

</Page>
