<Page x:Class="Ginger.Actions.ActSikuliEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls" xmlns:Actions="clr-namespace:Ginger.Actions"
      mc:Ignorable="d" 
	Title="ActLowLevelClicksEditPage">

    <Grid Height="Auto" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="40"/>
            <RowDefinition MinHeight="40" Height="Auto" MaxHeight="150"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="51"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Style="{StaticResource @InputFieldLabelStyle}">Window :</Label>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="xActiveProcessesTitlesComboBox" Margin="15,0,10,0" MinWidth="300" MaxWidth="600" Height="25"
                          SelectionChanged="xActiveProcessesTitlesComboBox_SelectionChanged" Style="{StaticResource $FlatInputComboBoxStyle}" >
                </ComboBox>
                <usercontrols:ucButton x:Name="xRefreshActiveWindows" ToolTip="Refresh Active Windows List" ButtonImageWidth="15" ButtonImageHeight="15"
                                       Margin="5,0" ButtonImageType="Refresh" Click="xRefreshActiveWindows_Click"/>
                <CheckBox x:Name="xShowSikuliCheckBox" Content="Show Sikuli Console" Margin="0,20" />
            </StackPanel>
        </StackPanel>

        <StackPanel  Grid.Row="1">
            <Label Style="{StaticResource @InputFieldLabelStyle}">Pattern :</Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,0">
            <Actions:UCValueExpression x:Name="xPatternImageLocationTextBox" ToolTip="Element Image Path for Sikuli Operation Pattern" MinWidth="300"/>
            <Button x:Name="xBrowsePatternButton" Content="Browse" Click="xBrowsePatternButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource @InputButtonStyle}" Margin="5,6"/>
            <usercontrols:ucButton x:Name="xCaptureLocatorImageButton" ButtonType="ImageButton" Click="CaptureLocatorImageButton_Click" ToolTip="Capture Application Element Image" ButtonFontImageSize="15" ButtonImageType="Camera" Foreground="Red" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Label Style="{StaticResource @InputFieldLabelStyle}">Element Screenshot Preview :</Label>
            <Canvas x:Name="xElementImageCanvas" Visibility="Collapsed">
                <Image x:Name="xElementImage" />
            </Canvas>
        </StackPanel>
        
        <StackPanel Grid.Row="4">
            <Label Style="{StaticResource @InputFieldLabelStyle}" Content="Operation Type"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <ComboBox x:Name="xSikuliOperationComboBox" Margin="15,0" MinWidth="300" Height="25" MaxWidth="450"
                      SelectionChanged="xSikuliOperationComboBox_SelectionChanged" Style="{StaticResource $FlatInputComboBoxStyle}" >
            </ComboBox>
        </StackPanel>
        
        <StackPanel x:Name="xSetTextRow" Grid.Row="6" Visibility="Collapsed">
            <Label Style="{StaticResource @InputFieldLabelStyle}" Content="Text : "/>
            <Actions:UCValueExpression x:Name="xSetTextValueTextBox" ToolTip="Set Text Element Value for Sikuli Operation Pattern" MinWidth="300" Margin="15,0"/>
        </StackPanel>
    </Grid>
</Page>
