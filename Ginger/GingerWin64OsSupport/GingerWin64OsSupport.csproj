<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Selenium.WebDriver.GeckoDriver" Version="0.28.0" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="IEDriverServer.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <PropertyGroup>
    <GeckoDriverPlatform>win64</GeckoDriverPlatform>
    <!--<PublishGeckoDriver>true</PublishGeckoDriver>-->
  </PropertyGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(OutDir)IEDriverServer.*&quot; &quot;$(SolutionDir)Ginger\bin\$(Configuration)\Win64&quot; /Y /I&#xD;&#xA;xcopy &quot;$(OutDir)geckodriver.*&quot; &quot;$(SolutionDir)Ginger\bin\$(Configuration)\Win64&quot; /Y /I" />
  </Target>

</Project>
